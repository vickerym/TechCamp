{% extends 'base.html.twig' %}

{% block body %}
    <h1>Application list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Camp</th>
                <th>Student</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for application in applications %}
            <tr>
                <td><a href="{{ path('admin_application_show', { 'id': application.id }) }}">{{ application.id }}</a></td>
                <td> {{ application.camp }}</td>
                <td> {{ application.student }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('admin_application_show', { 'id': application.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('admin_application_edit', { 'id': application.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_application_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
